<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mnb"
    android:background="#081A3E"
    tools:context="com.saf.Dan.LoginActivity">

    <TextView
        android:id="@+id/txtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="9dp"
      android:textColor="#FFC107"

        android:text="Select User:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginStart="20dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/pwd"
        android:layout_marginStart="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/txtVw"

        android:background="#CA9A0B" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/pphone"
        android:fontFamily="@font/maiandra"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_custom"
        android:hint="Enter email here"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#4C330E"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/pphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_custom"
        android:fontFamily="@font/maiandra"
        android:hint="Enter Phone "
        android:inputType="number"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#4C330E"
        android:textSize="15sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/pwd"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:textColorHint="#B9B8B8"
        app:passwordToggleEnabled="true">
    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/pwd1"
        android:background="@drawable/et_custom"
        android:hint="@string/password"
        android:fontFamily="@font/maiandra"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#4C330E"
        android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/spinner1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_custom"
        android:text="@string/login"
        android:fontFamily="@font/maiandra"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textColorLink="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/registerLink"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:fontFamily="@font/maiandra"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"

        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="9dp"

        android:singleLine="true"
        android:text="No Account? Create One?"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="4dp"
        android:text="Login"
        android:fontFamily="@font/maiandra"
        android:textColor="#F3D681"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerLink"
        android:fontFamily="@font/maiandra"

        android:layout_alignParentEnd="true"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="151dp"

        android:layout_marginEnd="121dp"
        android:layout_marginBottom="9dp"
        android:padding="5dp"
        android:text="Forgot Password?"
        android:textColor="@android:color/white"
        android:textSize="18sp" />






</RelativeLayout>