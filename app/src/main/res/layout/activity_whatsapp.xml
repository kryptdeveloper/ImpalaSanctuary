<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#78D872"
    android:layout_height="match_parent"
    tools:context="com.saf.Dan.Whatsapp">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
       android:layout_centerHorizontal="true"
        app:cardCornerRadius="50dp"

        android:layout_marginTop="70dp"
        android:id="@+id/pic">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:src="@drawable/logo"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/van"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/maiandra"
        android:text="Reach us through either:"
        android:textSize="25dp" />

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/van"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/what"

        android:fontFamily="@font/maiandra"
        android:text="Open Whatsapp chat with us!" />
    <Button
        android:id="@+id/inapp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/send"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/what"

        android:fontFamily="@font/maiandra"
        android:text="chat with us inapp live!" />
</RelativeLayout>