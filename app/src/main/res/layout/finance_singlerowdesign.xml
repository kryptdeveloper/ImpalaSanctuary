<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="#C7E1DF"
        android:layout_marginEnd="20dp"
        android:padding="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:id="@+id/img1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:id="@+id/q"
            android:text="Name:"
            android:maxLines="1"
            android:fontFamily="@font/maiandra"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/img1"
            android:textSize="25sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nametext"
            android:text="loading..."
            android:maxLines="1"
            android:layout_toEndOf="@+id/q"
            android:fontFamily="@font/maiandra"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/img1"
            android:textSize="25sp"
            android:textColor="#000"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="loading..."
            android:maxLines="1"
          android:layout_toEndOf="@+id/w"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/maiandra"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@id/nametext"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/w"
            android:text="Date:  "
            android:maxLines="1"
            android:fontFamily="@font/maiandra"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@id/nametext"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailtext"
            android:maxLines="1"
            android:text="loading..."
            android:fontFamily="@font/maiandra"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginStart="40dp"
           android:layout_toEndOf="@+id/e"
            android:layout_below="@id/date"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/e"
            android:text="Email:"
            android:maxLines="1"
            android:fontFamily="@font/maiandra"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@id/date"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone4"
            android:text="loading..."
            android:maxLines="1"
            android:layout_toEndOf="@+id/r"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/maiandra"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@id/emailtext"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r"
            android:text="Phone:"
            android:maxLines="1"
            android:fontFamily="@font/maiandra"
            android:textSize="25sp"
            android:textColor="#000"

            android:layout_below="@id/emailtext"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:text="loading..."
            android:maxLines="1"
            android:textSize="25sp"
            android:fontFamily="@font/maiandra"
            android:textColor="#000"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/t"
            android:layout_below="@id/phone4"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t"
            android:text="Mpesa code:"
            android:textSize="25sp"
            android:fontFamily="@font/maiandra"
            android:textColor="#000"
            android:maxLines="1"
            android:layout_below="@id/phone4"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
